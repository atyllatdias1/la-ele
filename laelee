<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<script>
/* ===== Estado ===== */
let licenses = [];
let flatpickrInstance = null;
let manualMode = false;

/* ===== Navegação ===== */
document.querySelectorAll('[data-nav]').forEach(btn => {
  btn.addEventListener('click', () => showScreen(btn.dataset.nav));
});

function showScreen(id) {
  document.querySelectorAll('section').forEach(s => s.classList.add('hidden'));
  document.getElementById(id).classList.remove('hidden');
  if (id === 'home') renderList();
}

/* ===== Subtipo ===== */
const subTypes = [
  'Férias','Licença-maternidade','Licença-paternidade',
  'Licença médica','Licença nojo','Licença gala',
  'Licença não remunerada','Acidente de trabalho'
];

document.getElementById('mainType').addEventListener('change', () => {
  const sub = document.getElementById('subType');
  sub.innerHTML = subTypes.map(t => `<option>${t}</option>`).join('');
  sub.classList.remove('hidden');
  document.getElementById('subTypeLabel').classList.remove('hidden');
});

/* ===== Date Component ===== */
const dateInput = document.getElementById('dateRange');

function initFlatpickr() {
  flatpickrInstance = flatpickr(dateInput, {
    mode: "range",
    dateFormat: "d/m/Y",
    locale: "pt",
    onClose: validateRange
  });
}

initFlatpickr();

/* Menu */
document.getElementById('dateMenuBtn').onclick = () =>
  document.getElementById('dateMenu').classList.toggle('hidden');

/* Manual Mode */
document.getElementById('manualModeBtn').onclick = () => {
  manualMode = true;
  flatpickrInstance.destroy();
  dateInput.readOnly = false;
  dateInput.value = '';
  document.getElementById('dateMenu').classList.add('hidden');
};

/* Mask */
dateInput.addEventListener('input', e => {
  if (!manualMode) return;
  let v = e.target.value.replace(/\D/g,'').slice(0,16);
  e.target.value = v
    .replace(/(\d{2})(\d)/,'$1/$2')
    .replace(/(\d{2})(\d)/,'$1/$2')
    .replace(/(\d{4})(\d)/,'$1 a $2')
    .replace(/(\d{2})(\d)/,'$1/$2')
    .replace(/(\d{2})(\d)/,'$1/$2');
});

/* Validation */
function validateRange() {
  if (!dateInput.value) return false;
  const parts = dateInput.value.split(' a ');
  if (parts.length !== 2) return false;

  const d1 = parseDate(parts[0]);
  const d2 = parseDate(parts[1]);

  return d1 && d2 && d2 >= d1;
}

function parseDate(str) {
  const [d,m,y] = str.split('/').map(Number);
  const dt = new Date(y, m-1, d);
  return dt && dt.getDate()===d ? dt : null;
}

/* Save */
document.getElementById('saveBtn').onclick = () => {
  if (!document.getElementById('subType').value || !validateRange()) {
    alert('Dados inválidos');
    return;
  }
  licenses.push({
    id: Date.now(),
    type: document.getElementById('subType').value,
    period: dateInput.value
  });
  resetForm();
  showScreen('home');
};

function resetForm() {
  manualMode = false;
  dateInput.readOnly = true;
  dateInput.value = '';
  initFlatpickr();
}

/* List */
function renderList() {
  const list = document.getElementById('licenseList');
  list.innerHTML = licenses.length
    ? licenses.map(l => `<p>${l.type} | ${l.period}</p>`).join('')
    : '<p>Nenhuma licença cadastrada.</p>';
}

showScreen('home');
</script>
</body>
</html>
