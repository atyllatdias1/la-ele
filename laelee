    <div class="date-field">
      <input id="dateRange" placeholder="Selecione o período..." readonly>
      <button class="date-actions" id="dateMenuBtn">⋮</button>
      <div id="dateMenu" class="date-menu hidden">
        <button id="manualModeBtn">Digitar manualmente</button>
      </div>
    </div>

    <div class="actions">
      <button class="primary" id="saveBtn">Criar</button>
      <button class="secondary" data-nav="home">Cancelar</button>
    </div>
  </section>
